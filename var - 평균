         for(let i in exam){
             document.write(`${i} : ${exam[i]} <br>`);
         }


        let exam2 = {
            "kor": 90,
            "eng": 100,
            "math": 99,
            "DB": 80
        }

        for(let i in exam2){
            if(i=="math") break;
            document.write(`${i} : ${exam2[i]} <br>`);
        }

