        var DB = 100;

        document.write(`국어(kor): ${kor} <br>`);
        document.write(`영어(eng): ${eng} <br>`);
        document.write(`수학(math): ${math} <br>`);
        document.write(`데이터베이스(DB): ${DB} <br>`);
